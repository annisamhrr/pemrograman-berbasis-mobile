<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Buku</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <div class="container">
    <h2>Daftar Buku</h2>
    <a href="/add" class="btn btn-primary my-3">Tambah Buku</a>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>ID</th><th>Judul</th><th>Penulis</th><th>Genre</th><th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.judul %></td>
            <td><%= item.penulis %></td>
            <td><%= item.genre %></td>
            <td>
              <a href="/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/delete/<%= item.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Hapus buku ini?')">Hapus</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
